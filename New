<body>
  <h2>Line Item Form</h2>
  <div class="upload-container">
    <label for="fileUpload" class="upload-btn">Upload Excel File</label>
    <input type="file" id="fileUpload" accept=".xlsx, .xls" onchange="handleFileUpload(event)">
    <span id="selectedFile" class="selected-file">No file selected</span>
  </div>
  <form id="lineItemForm">
    <table>
      <thead>
        <tr>
          <th>Place</th>
          <th>Name</th>
          <th>ID</th>
          <th>Date</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody id="lineItems">
        <tr>
          <td><input type="text" name="place[]" required></td>
          <td><input type="text" name="name[]" required></td>
          <td><input type="text" name="id[]" required></td>
          <td><input type="date" name="date[]" required></td>
          <td>
            <span class="add-icon" onclick="addLineItem()">&#43;</span>
          </td>
        </tr>
      </tbody>
    </table>
    <br>
    <input type="submit" value="Submit" onclick="submitForm()">
  </form>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.17.1/xlsx.full.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
  <script>
    function addLineItem() {
      var lineItems = document.getElementById('lineItems');
      var newRow = document.createElement('tr');
      newRow.innerHTML = `
        <td><input type="text" name="place[]" required></td>
        <td><input type="text" name="name[]" required></td>
        <td><input type="text" name="id[]" required></td>
        <td><input type="date" name="date[]" required></td>
        <td>
          <span class="remove-icon" onclick="removeLineItem(this)">&#8722;</span>
        </td>
      `;
      lineItems.appendChild(newRow);
    }

    function removeLineItem(row) {
      var lineItems = document.getElementById('lineItems');
      lineItems.removeChild(row.parentNode.parentNode);
    }

    function handleFileUpload(event) {
      var file = event.target.files[0];
      var reader = new FileReader();

      reader.onload = function(e) {
        var data = new Uint8Array(e.target.result);
        var workbook = XLSX.read(data, { type: 'array' });
        var worksheet = workbook.Sheets[workbook.SheetNames[0]];
        var jsonData = XLSX.utils.sheet_to_json(worksheet, { header: 1 });

        var lineItems = document.getElementById('lineItems');
        lineItems.innerHTML = ''; // Clear existing line items

        for (var i = 1; i < jsonData.length; i++) {
          var newRow = document.createElement('tr');
          newRow.innerHTML = `
            <td><input type="text" name="place[]" value="${jsonData[i][0]}" required></td>
            <td><input type="text" name="name[]" value="${jsonData[i][1]}" required></td>
            <td><input type="text" name="id[]" value="${jsonData[i][2]}" required></td>
            <td><input type="date" name="date[]" value="${formatDate(jsonData[i][3])}" required></td>
            <td>
              <span class="remove-icon" onclick="removeLineItem(this)">&#8722;</span>
            </td>
          `;
          lineItems.appendChild(newRow);
        }
      };

      reader.readAsArrayBuffer(file);
      document.getElementById('selectedFile').textContent = file.name; // Update selected file name
    }

    function formatDate(dateString) {
      var date = moment(dateString, ['MM-DD-YYYY', 'DD-MM-YYYY', 'YYYY-MM-DD'], true);
      if (date.isValid()) {
        return date.format('YYYY-MM-DD');
      } else {
        return '';
      }
    }

    function submitForm() {
      var formData = {
        lineItems: []
      };

      var rows = document.querySelectorAll('#lineItems tr');
      rows.forEach(function(row) {
        var place = row.querySelector('input[name="place[]"]').value;
        var name = row.querySelector('input[name="name[]"]').value;
        var id = row.querySelector('input[name="id[]"]').value;
        var date = row.querySelector('input[name="date[]"]').value;

        formData.lineItems.push({
          place: place,
          name: name,
          id: id,
          date: date
        });
      });

      var dataStr = "data:text/json;charset=utf-8," + encodeURIComponent(JSON.stringify(formData, null, 2));
      var downloadAnchor = document.createElement('a');
      downloadAnchor.setAttribute('href', dataStr);
      downloadAnchor.setAttribute('download', 'form_data.json');
      downloadAnchor.click();

      // Show a notification and reset the form
      alert('Form submitted successfully!');
      document.getElementById('lineItemForm').reset();
    }
  </script>
</body>
</html>
