    }

    input[type="submit"]:hover {
      background-color: #0056b3;
    }

    .upload-container {
      display: flex;
      align-items: center;
      justify-content: space-between;
      margin-bottom: 20px;
    }

    .upload-container input[type="file"] {
      display: none;
    }

    .upload-btn {
      display: inline-block;
